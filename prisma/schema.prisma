datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  lists     ShoppingList[]
  createdAt DateTime @default(now())
}

model ShoppingList {
  id        String   @id @default(uuid())
  title     String
  items     Json
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
